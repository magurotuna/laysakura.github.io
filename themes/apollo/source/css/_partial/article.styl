#container
  width: 940px
  margin-left: auto
  margin-right: auto

#main
  padding-left: 0

.post
  margin-bottom: 5em
  position: relative
  
  .entry-header
    margin-bottom: 2em
  
  .entry-title
    font-weight: bold
    font-size: 180%
    margin: 0
    a
      &:hover
        transition: .4s
        color: color-link
    &:before
      font-size: .8em
      line-height: 1em
      display: inline-block
      position: relative
      cursor: pointer
      text-align: center
      content: "#"
      color: color-link

.article-devider
  width: 8%
  margin: 5em auto
  border: 0
  border-top: 5px solid #ddd

.entry-meta-header
  top: .5em
  width: 180px
  font-size: 85%
  a
    color: color-default
    &:hover
      color: color-link

  .meta-elements
    display: block
    margin-bottom: .5em

  .date
    font-weight: bold
    font-size: 120%
    a
      color: color-pale
      &:hover
        transition .4s
        color: color-link

  .commentscount
    font-size: 90%
    margin-top: 1.5em

.entry-content
  font-size: 105%
  line-height: line-height
  margin-bottom: 2em
  .title
    &.link
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super
  p
    margin: 0 0 1em 0
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  a[title*="Flickr"] img
    height: auto!important
  h1, h2, h3, h4, h5, h6
    margin: 1em 0 .8em 0
    line-height: 1.5
    &:before
      padding-right 10px
      font-size: .8em
      line-height: 1em
      display: inline-block
      position: relative
      text-align: center
      color: color-link
  h1
    font-size: 170%
  h2
    font-size: 140%
    &:before
      content: "##"
  h3
    font-size: 130%
    &:before
      content: "###"
  h4
    font-size: 120%
    &:before
      content: "####"
  h5
    font-size: 110%
    &:before
      content: "#####"
  h6
    font-size: 100%
    &:before
      content: "######"
  dt
    font-weight: bold
  ul
    list-style: disc !important
  ol
    list-style: decimal !important
  ul, ol, dl
    margin: 0 0 1em 1.5em
    padding: 0
    li ul, li ol
      margin-bottom: 0

  table
    margin: 0
    width: auto
    border-collapse: collapse
    border-spacing: 0

  th
    font-weight: bold
    border-bottom: 3px solid color-border
    padding-bottom: 0.5em

  td
    border-bottom: 1px solid color-border
    padding: 10px 0

  blockquote
    font-family: font-serif
    margin: 1.5em 3em
    padding: 5px 20px
    border-left: 2px solid #aaa
    color: color-footer
    p:last-child
      margin-bottom: 0
    footer
      font-size: font-size
      font-family: font-sans
      cite
        &:before
          content: "—"
          padding: 0 0.5em

  .pullquote
    border-left: 0
    font-family: font-serif
    text-align: left
    width: 45%
    margin: 10px 0 0 0
    .left
      margin-left: 0.5em
      margin-right: 1em
    .right
      margin-right: 0.5em
      margin-left: 1em
  
  .caption
    color: color-default
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center

  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

  pre
    padding: 15px
    background: color-super-pale
    border: 0
    border-bottom-right-radius: 0
    border-bottom-left-radius: 0
    border-top-left-radius: 0
    border-radius: 3px
    background-clip: padding-box
    word-wrap: normal
    overflow-x: auto
    font-size: 100%
    line-height: 1.3

  hr
    width: 20%
    margin: 3em auto
    border: 0
    border-top: 3px solid #d5d5d5

  // リンクの右隣のはてブ数
  img.hatebu
    margin-left: .5em
    display: inline


.entry-meta-footer
  font-size: 85%
  color: color-footer
  line-height: 1.5
  margin-bottom: 1.5em
  a
    color: color-footer
    &:hover
      color: color-link

  li
    list-style-type: none

  span
    line-height: line-height

  .category a
    margin-left: 5px
    margin-right: 5px
    &:first-child
      margin-left: 0
    &:last-child
      margin-right: 0

  .meta
    margin-bottom: .7em

.author-info
  display: block
  clear: both

.article-more-link
  text-align: center
  a
    padding: .5em 1em
    transition: 0.2s
    border-radius: .4em
    border: 1px solid color-link
    color: color-link
    background-color: color-background
    &:hover
      transition: .4s
      background-color: color-link
      border: 1px solid color-link
      color: #fff

.article-tag-list
  padding: 0

.article-tag-list-item
  float: left
  margin-right: 10px
  &:before
    font-family: FontAwesome
    font-size: 1em
    line-height: 1em
    display: inline-block
    position: relative
    cursor: pointer
    text-align: center
    content: "\f02b"

.author-info
  background: color-super-pale
  border-radius: 10px
  padding: 1.8em

  .author-content
    width: 87%
    padding-left: 1em

    .author-caption
      font-weight: bold

    .author-description
      margin 1em 0

    ul.author-social-buttons
      li.author-social-button
        display: inline-block
        margin-right: .5em
